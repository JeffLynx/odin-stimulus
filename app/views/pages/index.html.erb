<div data-controller="hello">
  <button data-action="click->hello#greet">
    Say hello
  </button>
</div>

<div data-controller="toggle">
  <div data-toggle-target="first">
    <p>Step 1</p>
    <button data-action="click->toggle#swap">Next</button>
  </div>

  <div data-toggle-target="second" class="hidden">
    <p>Step 2</p>
  </div>
</div>

<div data-controller="highlight">
  <label>
    <input type="checkbox" id="checkbox" data-action="change->highlight#toggle">
    Highlight this box
  </label>
</div>

<div
    data-controller="character-counter"
    data-character-counter-max-value="280"
>
  <textarea
    data-character-counter-target="input"
    data-action="input->character-counter#update"
    id="input"
  ></textarea>

  <p data-character-counter-target="count">
    280 characters remaining
  </p>
</div>
